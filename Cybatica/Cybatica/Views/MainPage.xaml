<?xml version="1.0" encoding="utf-8"?>

<rxui:ReactiveTabbedPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:v="clr-namespace:Cybatica.Views"
    xmlns:vm="clr-namespace:Cybatica.ViewModels"
    xmlns:resource="clr-namespace:Cybatica.Resources"
    x:Class="Cybatica.Views.MainPage"
    x:TypeArguments="vm:MainViewModel"
    Visual="Material"
    Title="Main Page"
    SelectedTabColor="{StaticResource Secondary}">

    <TabbedPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <resource:AppTheme />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </TabbedPage.Resources>

    <TabbedPage.Children>

        <NavigationPage Title="Home"
                        BarBackgroundColor="{StaticResource Primary}"
                        BarTextColor="{StaticResource Black}">
            <x:Arguments>
                <v:HomePage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="OCS"
                        BarBackgroundColor="{StaticResource Primary}"
                        BarTextColor="{StaticResource Black}">
            <x:Arguments>
                <v:OcsPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Bio Data"
                        BarBackgroundColor="{StaticResource Primary}"
                        BarTextColor="{StaticResource Black}">
            <x:Arguments>
                <v:BioDataPage />
            </x:Arguments>
        </NavigationPage>

    </TabbedPage.Children>

</rxui:ReactiveTabbedPage>
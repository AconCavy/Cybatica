<?xml version="1.0" encoding="utf-8"?>

<rxui:ReactiveContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:vm="clr-namespace:Cybatica.ViewModels"
    xmlns:theme="clr-namespace:Cybatica.Resources"
    x:Class="Cybatica.Views.BioDataPage"
    x:TypeArguments="vm:BioDataViewModel"
    Visual="Material"
    Title="Bio Data"
    BackgroundColor="{StaticResource Gray100}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <theme:AppTheme />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <Grid Margin="8,8,8,8"
              RowSpacing="8"
              ColumnSpacing="8">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Frame Style="{StaticResource Card}"
                   Grid.Row="0"
                   Grid.Column="0">
                <StackLayout>
                    <Label Style="{StaticResource HeadText}"
                           Text="BVP" />
                    <Label x:Name="Bvp"
                           Style="{StaticResource NormalText}"
                           Text="0" />
                </StackLayout>
            </Frame>

            <Frame Style="{StaticResource Card}"
                   Grid.Row="0"
                   Grid.Column="1">
                <StackLayout>
                    <Label Style="{StaticResource HeadText}"
                           Text="IBI" />
                    <Label x:Name="Ibi"
                           Style="{StaticResource NormalText}"
                           Text="0" />
                </StackLayout>
            </Frame>

            <Frame Style="{StaticResource Card}"
                   Grid.Row="1"
                   Grid.Column="0">
                <StackLayout>
                    <Label Style="{StaticResource HeadText}"
                           Text="HR" />
                    <Label x:Name="Hr"
                           Style="{StaticResource NormalText}"
                           Text="0" />
                </StackLayout>
            </Frame>

            <Frame Style="{StaticResource Card}"
                   Grid.Row="1"
                   Grid.Column="1">
                <StackLayout>
                    <Label Style="{StaticResource HeadText}"
                           Text="EDA" />
                    <Label x:Name="Gsr"
                           Style="{StaticResource NormalText}"
                           Text="1" />
                </StackLayout>
            </Frame>

            <Frame Style="{StaticResource Card}"
                   Grid.Row="2"
                   Grid.Column="0">
                <StackLayout>
                    <Label Style="{StaticResource HeadText}"
                           Text="TEMPERATURE" />
                    <Label x:Name="Temperature"
                           Style="{StaticResource NormalText}"
                           Text="1" />
                </StackLayout>
            </Frame>

            <Frame Style="{StaticResource Card}"
                   Grid.Row="2"
                   Grid.Column="1">
                <StackLayout>
                    <Label Style="{StaticResource HeadText}"
                           Text="ACCELERATION" />
                    <Label x:Name="Acceleration"
                           Style="{StaticResource NormalText}"
                           Text="0,0,0" />
                </StackLayout>
            </Frame>

            <Button x:Name="Chart"
                    Style="{StaticResource Button}"
                    Text="Realtime Chart"
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2" />

        </Grid>

    </ContentPage.Content>

</rxui:ReactiveContentPage>
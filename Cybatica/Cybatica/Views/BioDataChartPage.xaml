<?xml version="1.0" encoding="utf-8"?>

<rxui:ReactiveContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:vm="clr-namespace:Cybatica.ViewModels"
    xmlns:chart="clr-namespace:Syncfusion.SfChart.XForms;assembly=Syncfusion.SfChart.XForms"
    xmlns:theme="clr-namespace:Cybatica.Resources"
    x:Class="Cybatica.Views.BioDataChartPage"
    x:TypeArguments="vm:BioDataChartViewModel"
    Visual="Material"
    Title="BIO DATA CHART">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <theme:AppTheme />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="Chart" TargetType="chart:SfChart">
                <Setter Property="HeightRequest" Value="300" />
                <Setter Property="BackgroundColor" Value="{StaticResource Base4}" />
                <Setter Property="AreaBackgroundColor" Value="{StaticResource White1}" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <ScrollView>

            <StackLayout Padding="8,8,8,8">

                <chart:SfChart Style="{StaticResource Chart}">
                    <chart:SfChart.Title>
                        <chart:ChartTitle Text="BVP" TextColor="{StaticResource Black2}"
                                          BackgroundColor="{StaticResource Base4}" />
                    </chart:SfChart.Title>
                    <chart:SfChart.PrimaryAxis>
                        <chart:NumericalAxis AutoScrollingDelta="10">
                            <chart:NumericalAxis.Title>
                                <chart:ChartAxisTitle Text="Timestamp" TextColor="{StaticResource Black2}" />
                            </chart:NumericalAxis.Title>
                        </chart:NumericalAxis>
                    </chart:SfChart.PrimaryAxis>
                    <chart:SfChart.SecondaryAxis>
                        <chart:NumericalAxis>
                            <chart:NumericalAxis.Title>
                                <chart:ChartAxisTitle Text="Value" TextColor="{StaticResource Black2}" />
                            </chart:NumericalAxis.Title>
                        </chart:NumericalAxis>
                    </chart:SfChart.SecondaryAxis>
                    <chart:SfChart.Series>
                        <chart:FastLineSeries x:Name="Bvp" Color="{StaticResource Accent}" XBindingPath="Timestamp"
                                              YBindingPath="Value" EnableAnimation="True" />
                    </chart:SfChart.Series>
                    <chart:SfChart.ChartBehaviors>
                        <chart:ChartZoomPanBehavior ZoomMode="XY" />
                    </chart:SfChart.ChartBehaviors>
                </chart:SfChart>

                <chart:SfChart Style="{StaticResource Chart}">
                    <chart:SfChart.Title>
                        <chart:ChartTitle Text="EDA" TextColor="{StaticResource Black2}"
                                          BackgroundColor="{StaticResource Base4}" />
                    </chart:SfChart.Title>
                    <chart:SfChart.PrimaryAxis>
                        <chart:NumericalAxis AutoScrollingDelta="10">
                            <chart:NumericalAxis.Title>
                                <chart:ChartAxisTitle Text="Timestamp" TextColor="{StaticResource Black2}" />
                            </chart:NumericalAxis.Title>
                        </chart:NumericalAxis>
                    </chart:SfChart.PrimaryAxis>
                    <chart:SfChart.SecondaryAxis>
                        <chart:NumericalAxis>
                            <chart:NumericalAxis.Title>
                                <chart:ChartAxisTitle Text="Value" TextColor="{StaticResource Black2}" />
                            </chart:NumericalAxis.Title>
                        </chart:NumericalAxis>
                    </chart:SfChart.SecondaryAxis>
                    <chart:SfChart.Series>
                        <chart:FastLineSeries x:Name="Eda" Color="{StaticResource Accent}" XBindingPath="Timestamp"
                                          YBindingPath="Value" EnableAnimation="True" />
                    </chart:SfChart.Series>
                    <chart:SfChart.ChartBehaviors>
                        <chart:ChartZoomPanBehavior ZoomMode="XY" />
                    </chart:SfChart.ChartBehaviors>
                </chart:SfChart>

                <chart:SfChart Style="{StaticResource Chart}">
                    <chart:SfChart.Title>
                        <chart:ChartTitle Text="TEMPERATURE" TextColor="{StaticResource Black2}"
                                          BackgroundColor="{StaticResource Base4}" />
                    </chart:SfChart.Title>
                    <chart:SfChart.PrimaryAxis>
                        <chart:NumericalAxis AutoScrollingDelta="10">
                            <chart:NumericalAxis.Title>
                                <chart:ChartAxisTitle Text="Timestamp" TextColor="{StaticResource Black2}" />
                            </chart:NumericalAxis.Title>
                        </chart:NumericalAxis>
                    </chart:SfChart.PrimaryAxis>
                    <chart:SfChart.SecondaryAxis>
                        <chart:NumericalAxis>
                            <chart:NumericalAxis.Title>
                                <chart:ChartAxisTitle Text="Value" TextColor="{StaticResource Black2}" />
                            </chart:NumericalAxis.Title>
                        </chart:NumericalAxis>
                    </chart:SfChart.SecondaryAxis>
                    <chart:SfChart.Series>
                        <chart:FastLineSeries x:Name="Temperature" Color="{StaticResource Accent}" XBindingPath="Timestamp"
                                          YBindingPath="Value" EnableAnimation="True" />
                    </chart:SfChart.Series>
                    <chart:SfChart.ChartBehaviors>
                        <chart:ChartZoomPanBehavior ZoomMode="XY" />
                    </chart:SfChart.ChartBehaviors>
                </chart:SfChart>

            </StackLayout>

        </ScrollView>

    </ContentPage.Content>

</rxui:ReactiveContentPage>